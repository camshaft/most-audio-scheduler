{
  "compilerOptions": {
    // strict options
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny" : true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "importHelpers": true,
    "listFiles": false,
    "traceResolution": false,
    "experimentalDecorators": true,
    "pretty": true,
    "sourceMap": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "types": [
    "node"
  ]
}
